<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dao.FeedBackMapper">

	<select id="selectAllFeedBack" resultType="com.entity.FeedBack" parameterType="java.util.Map" >
			select * from feedbacks
			<where>
	     		<if test="isReplied != -1" >
					and isReplied = #{isReplied,jdbcType=INTEGER}
				</if>
	     		<if test="userId != null" >
					and userId = #{userId,jdbcType=VARCHAR}
				</if>
			</where>
     		<if test="order != null" >
				order by createTime ${order}
			</if>
	</select>

	<select id="selectFeedBackListByUserId" resultType="com.entity.FeedBack" parameterType="java.lang.String" >
			select * from feedbacks
			where userId = #{userId,jdbcType=VARCHAR}
	</select>
	
	<select id="selectFeedBackListById" resultType="com.entity.FeedBack" parameterType="java.lang.Integer" >
			select * from feedbacks
			where fid = #{fid,jdbcType=INTEGER}
	</select>
  
	<insert id="insertFeedBack" parameterType="com.entity.FeedBack" >
	  insert into feedbacks (createTime, userId, content)
	  values (
	  #{createTime,jdbcType=TIMESTAMP}, 
	  #{userId,jdbcType=VARCHAR}, 
	  #{content,jdbcType=VARCHAR})
	</insert>
	
</mapper> 